<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_light_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_recruiter.RecruiterApplicationCardClickActivity"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/recruiter_application_cardclick_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STUDENT APPLICATION"
        android:textSize="30dp"
        android:textColor="	#00008B"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:id="@+id/recruiter_application_cardclick_jobpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Post"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:id="@+id/recruiter_application_cardclick_companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/recruiter_application_cardclick_companydescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Description"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:id="@+id/recruiter_application_cardclick_workingtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Working Type"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:id="@+id/recruiter_application_cardclick_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/recruiter_application_cardclick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/recruiter_application_cardclick_qualification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qualification"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/recruiter_application_cardclick_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/recruiter_application_cardclick_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Field"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/recruiter_application_cardclick_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UID"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/recruiter_application_cardclick_acceptbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/button"
        android:text="Accept"
        android:textColor="#ffffff"
        />
</LinearLayout>
</ScrollView>
