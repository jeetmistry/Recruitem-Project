<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_student.StudentJobCardClickActivity"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    >
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPLY FOR JOB"
        android:textSize="30dp"
        android:textColor="#00008B"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:id="@+id/student_job_cardclick_jobpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Post"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:id="@+id/student_job_cardclick_companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:id="@+id/student_job_cardclick_companydescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Description"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:id="@+id/student_job_cardclick_workingtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Working Type"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"

        />

    <Button
        android:id="@+id/student_job_cardclick_applybtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Apply Job"
        android:textColor="#ffffff"
        />

</LinearLayout>