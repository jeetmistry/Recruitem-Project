<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="@color/colorBlue"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#33ccff"
    app:cardElevation="2mm">

    <TextView
        android:id="@+id/recruiter_viewapplications_card_jobpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Job Post"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/recruiter_viewapplications_card_companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:text="Company Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/recruiter_viewapplications_card_companydescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:text="Company Description"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/recruiter_viewapplications_card_workingtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="140dp"
        android:text="Field"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recruiter_viewapplications_card_status"
        android:layout_marginTop="180dp"
        android:text="Status"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recruiter_viewapplications_card_name"
        android:layout_marginTop="220dp"
        android:text="Name"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recruiter_viewapplications_card_qualification"
        android:layout_marginTop="260dp"
        android:text="Qualification"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recruiter_viewapplications_card_email"
        android:layout_marginTop="300dp"
        android:text="Email"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recruiter_viewapplications_card_studentfield"
        android:layout_marginTop="340dp"
        android:text="Student Field"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recruiter_viewapplications_card_uid"
        android:layout_marginTop="340dp"
        android:text="UID"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"
        />
</androidx.cardview.widget.CardView>