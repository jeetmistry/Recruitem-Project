<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_margin="5dp"
    android:background="@color/colorBlue"
    app:cardBackgroundColor="#33ccff"
    app:cardCornerRadius="12dp"
    app:cardElevation="2mm">

    <TextView
        android:id="@+id/student_viewapplications_card_jobpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Job Post"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/student_viewapplications_card_companyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:text="Company Name"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/student_viewapplications_card_companydescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:text="Company Description"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/student_viewapplications_card_workingtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="160dp"
        android:text="Field"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/student_viewapplications_card_status"
        android:layout_marginTop="200dp"
        android:text="Status"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginLeft="5dp"
        />
</androidx.cardview.widget.CardView>